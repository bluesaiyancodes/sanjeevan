<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imagecovidmoderate"
            android:layout_width="match_parent"
            android:layout_height="220sp"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/covid_moderate"
            tools:layout_editor_absoluteX="0dp" />

        <TextView
            android:id="@+id/textcovidmod"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/imagecovidmoderate"
            android:layout_alignTop="@+id/imagecovidmoderate"
            android:layout_alignRight="@+id/imagecovidmoderate"
            android:layout_alignBottom="@+id/imagecovidmoderate"
            android:gravity="center"
            android:text="@string/text_covid_mod1"
            android:textSize="60sp" />

        <TextView
            android:id="@+id/textcovidmod1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imagecovidmoderate"
            android:paddingTop="30sp"
            android:paddingLeft="20sp"
            android:paddingRight="20sp"
            android:text="@string/text_covid_mod2"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/textcovidmod2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/textcovidmod1"
            android:gravity="center"
            android:paddingTop="100sp"
            android:text="@string/text_covid_mod3"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/textcovidmod3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/textcovidmod2"
            android:gravity="center"
            android:paddingTop="50sp"
            android:text="@string/text_covid_mod4"
            android:textColor="#827a05"
            android:textSize="30sp" />


    </RelativeLayout>
</ScrollView>