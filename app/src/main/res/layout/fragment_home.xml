<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:text="@string/home_head"
            android:background="@drawable/tile_curved"
            android:layout_marginLeft="20sp"
            android:layout_marginRight="20sp"
            android:textSize="30sp" />

        <ImageView
            android:id="@+id/home_image1"
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:layout_below="@id/textView"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="30dp"
            app:srcCompat="@drawable/hand_wash" />

        <TextView
            android:id="@+id/text_home_image1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/home_image1"
            android:layout_alignTop="@+id/home_image1"
            android:layout_alignRight="@+id/home_image1"
            android:layout_alignBottom="@+id/home_image1"
            android:gravity="center"
            android:text="@string/home_image_blank"
            android:textSize="20sp" />

        <ImageView
            android:id="@+id/home_image2"
            android:layout_width="360dp"
            android:layout_height="180dp"
            android:layout_below="@id/home_image1"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            app:srcCompat="@drawable/social_distance" />

        <TextView
            android:id="@+id/text_home_image2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/home_image2"
            android:layout_alignTop="@+id/home_image2"
            android:layout_alignRight="@+id/home_image2"
            android:layout_alignBottom="@+id/home_image2"
            android:gravity="center"
            android:text="@string/home_image_blank"
            android:textSize="20sp" />

        <ImageView
            android:id="@+id/home_image3"
            android:layout_width="200dp"
            android:layout_height="150dp"
            android:layout_below="@id/home_image2"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:layout_toRightOf="@id/home_image4"
            app:srcCompat="@drawable/wear_mask" />

        <TextView
            android:id="@+id/text_home_image3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/home_image3"
            android:layout_alignTop="@+id/home_image3"
            android:layout_alignRight="@+id/home_image3"
            android:layout_alignBottom="@+id/home_image3"
            android:gravity="center"
            android:text="@string/home_image_blank"
            android:textSize="20sp" />

        <ImageView
            android:id="@+id/home_image4"
            android:layout_width="175dp"
            android:layout_height="130dp"
            android:layout_below="@id/home_image2"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="60dp"
            app:srcCompat="@drawable/avoid_face" />

        <TextView
            android:id="@+id/text_home_image4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/home_image4"
            android:layout_alignTop="@+id/home_image4"
            android:layout_alignRight="@+id/home_image4"
            android:layout_alignBottom="@+id/home_image4"
            android:gravity="center"
            android:text="@string/home_image_blank"
            android:textSize="20sp" />

        <ImageView
            android:id="@+id/home_image5"
            android:layout_width="363dp"
            android:layout_height="157dp"
            android:layout_below="@id/home_image4"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            app:srcCompat="@drawable/stay_informed" />

        <TextView
            android:id="@+id/text_home_image5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/home_image5"
            android:layout_alignTop="@+id/home_image5"
            android:layout_alignBottom="@+id/home_image5"
            android:gravity="center"
            android:paddingLeft="15sp"
            android:paddingRight="15sp"
            android:text="@string/home_image_blank"
            android:textSize="20sp" />

        <ImageView
            android:id="@+id/home_image6"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_below="@id/textView"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="55dp"
            android:layout_toRightOf="@id/home_image1"
            app:srcCompat="@drawable/corona" />

    </RelativeLayout>


</ScrollView>

